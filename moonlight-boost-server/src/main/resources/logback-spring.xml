<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- 服务器运行时，在bootstrap.yml中通过 logging.config=classpath:logback-spring.xml文件，
    表示服务器运行时，日志异步打印出来，增加服务器的效率 -->
    <include resource="logback/defaults-async.xml"/>
    <logger name="top.tangyh.lamp.authority.controller" additivity="true" level="${log.level.controller}">
        <appender-ref ref="ASYNC_CONTROLLER_APPENDER"/>
    </logger>
    <logger name="top.tangyh.lamp.authority.service" additivity="true" level="${log.level.service}">
        <appender-ref ref="ASYNC_SERVICE_APPENDER"/>
    </logger>
    <logger name="top.tangyh.lamp.authority.dao" additivity="false" level="${log.level.dao}">
        <appender-ref ref="ASYNC_DAO_APPENDER"/>
    </logger>
    <logger name="top.tangyh.lamp.sms.controller" additivity="true" level="${log.level.controller}">
        <appender-ref ref="ASYNC_CONTROLLER_APPENDER"/>
    </logger>
    <logger name="top.tangyh.lamp.sms.service" additivity="true" level="${log.level.service}">
        <appender-ref ref="ASYNC_SERVICE_APPENDER"/>
    </logger>
    <logger name="top.tangyh.lamp.sms.dao" additivity="false" level="${log.level.dao}">
        <appender-ref ref="ASYNC_DAO_APPENDER"/>
    </logger>
    <logger name="top.tangyh.lamp.msg.controller" additivity="true" level="${log.level.controller}">
        <appender-ref ref="ASYNC_CONTROLLER_APPENDER"/>
    </logger>
    <logger name="top.tangyh.lamp.msg.service" additivity="true" level="${log.level.service}">
        <appender-ref ref="ASYNC_SERVICE_APPENDER"/>
    </logger>
    <logger name="top.tangyh.lamp.msg.dao" additivity="false" level="${log.level.dao}">
        <appender-ref ref="ASYNC_DAO_APPENDER"/>
    </logger>
    <logger name="top.tangyh.lamp.file.controller" additivity="true" level="${log.level.controller}">
        <appender-ref ref="ASYNC_CONTROLLER_APPENDER"/>
    </logger>
    <logger name="top.tangyh.lamp.file.service" additivity="true" level="${log.level.service}">
        <appender-ref ref="ASYNC_SERVICE_APPENDER"/>
    </logger>
    <logger name="top.tangyh.lamp.file.dao" additivity="false" level="${log.level.dao}">
        <appender-ref ref="ASYNC_DAO_APPENDER"/>
    </logger>
    <logger name="top.tangyh.lamp.file.dao" additivity="false" level="${log.level.dao}">
        <appender-ref ref="ASYNC_DAO_APPENDER"/>
    </logger>
    <logger name="top.tangyh.lamp.activiti.dao" additivity="false" level="${log.level.dao}">
        <appender-ref ref="ASYNC_DAO_APPENDER"/>
    </logger>
    <logger name="org.activiti" level="ERROR" additivity="false">
        <appender-ref ref="ASYNC_CONTROLLER_APPENDER"/>
    </logger>
    <logger name="org.activiti.engine.impl.persistence.entity" additivity="false" level="${log.level.dao}">
        <appender-ref ref="ASYNC_DAO_APPENDER"/>
    </logger>

</configuration>
